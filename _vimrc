set backspace=indent,eol,start
noremap j h
noremap k j
noremap l k
noremap ñ l
vnoremap j h
vnoremap k j
vnoremap l k
vnoremap ñ l
noremap <tab> <c-W>W
let mapleader=" "
set number
set relativenumber
set cursorline
noremap <leader>s mlgg=G'l:w<CR>
noremap <leader>r :so $HOME\_vimrc<CR>
noremap <leader>r :so $HOME\_vimrc<CR>
colorscheme desert
set guifont=hack:h12:cDEFAULT
set tabstop=2
set shiftwidth=2
set expandtab
set foldmethod=syntax
let g:netrw_liststyle = 3
let g:netrw_banner = 0
let g:netrw_browse_split = 3
syntax on
